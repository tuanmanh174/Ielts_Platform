@model DataModel.School.SchoolCreateDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <form asp-action="Create">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Thêm Mới Trường</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="SCHOOL_NAME" type="text" class="form-control">
                        <label asp-for="SCHOOL_NAME">Tên Trường</label>
                        <span asp-validation-for="SCHOOL_NAME" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="SCHOOL_CODE" type="text" class="form-control">
                        <label asp-for="SCHOOL_CODE">Mã Trường</label>
                        <span asp-validation-for="SCHOOL_CODE" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ADDRESS" type="text" class="form-control">
                        <label asp-for="ADDRESS">Địa Chỉ</label>
                        <span asp-validation-for="ADDRESS" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="PHONE" type="text" class="form-control">
                        <label asp-for="PHONE">Số Máy Bàn</label>
                        <span asp-validation-for="PHONE" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="TEL" type="text" class="form-control">
                        <label asp-for="TEL">Số Di Động</label>
                        <span asp-validation-for="TEL" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="CITY_ID" class="form-select" id="floatingSelect"
                                aria-label="Floating label select example">
                            <option selected>Open this select menu</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <label for="floatingSelect">Thành Phố</label>
                        <span asp-validation-for="CITY_ID" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
           
        </form>

    </div>
</div>


