@model DataModel.QuestionTest.QuestionTestCreateDTO
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <form asp-action="Create">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Thêm Mới Kỳ Thi</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="TEST_NAME" type="text" class="form-control">
                        <label asp-for="TEST_NAME">Tên Đề Thi</label>
                        <span asp-validation-for="TEST_NAME" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="TEST_CODE" type="text" class="form-control">
                        <label asp-for="TEST_CODE">Mã Đề Thi</label>
                        <span asp-validation-for="TEST_CODE" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="NUMBER_PART" type="number" class="form-control">
                        <label asp-for="NUMBER_PART">Số Part</label>
                        <span asp-validation-for="NUMBER_PART" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="TEST_TYPE" class="form-select" id="floatingSelect"
                                aria-label="Floating label select example">
                            <option selected>Open this select menu</option>
                            <option value="1">Reading</option>
                            <option value="2">Listening</option>
                            <option value="3">Writing</option>
                        </select>
                        <label for="floatingSelect">Dạng Đề Thi</label>
                        <span asp-validation-for="TEST_TYPE" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="submit" value="Thêm Mới" class="btn btn-primary" />
                    </div>
                </div>
            </div>

        </form>

    </div>
</div>

